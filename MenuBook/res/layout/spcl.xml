<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ff0000"
		        android:textColor="#ffffff"
		        android:textSize="20dp"
        		android:text="CAUTION: This is a demo app. The link is not activated." /> 
        		
            <Space 
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                />
            
             <TextView
    		       android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:background="#ff00"
			        android:text="Special Offers!!!"
			        android:textSize="25dp"
			        android:textColor="#ffffff"
			        android:layout_gravity="center"
			        android:gravity="center" />

             <Space
                 android:layout_width="match_parent"
                 android:layout_height="10dp" />
             
    		<ImageView
    		    android:id="@+id/imageView1"
    		    android:layout_width="395dp"
    		    android:layout_height="141dp"
    		    android:src="@drawable/spcl" />
             
            <Space
                 android:layout_width="match_parent"
                 android:layout_height="10dp" />
             
            
    			<LinearLayout 
    			    android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
    			    >
    			    
    			    <ImageButton
    			        android:id="@+id/bSOFb"
    			        android:layout_width="52dp"
    			        android:layout_height="46dp"
    			        android:src="@drawable/fl" />
    			    
    			    <Space 
    			        android:layout_width="10dp"
			       		android:layout_height="wrap_content"
    			        />
        			
    			    <TextView 
    			        android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			        	android:text="Share us on facebook and get a 5% discount."
			        	android:textSize="20dp"
			        	android:textColor="#00ccff"
			        	android:textStyle="italic"
    			        />
    			    
    			</LinearLayout>
    		
    			<Space 
    			        android:layout_width="30dp"
			       		android:layout_height="20dp"
    			        />
    			
    		 <TextView 
    			        android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			        	android:text="Enjoy a 4% discount on every first friday of te month."
			        	android:layout_gravity="center"
			        	android:gravity="center"
			        	android:textSize="20dp"
			        	android:textColor="#00ccff"
			        	android:textStyle="italic"
    			        />
  
        </LinearLayout>
    </ScrollView>

</LinearLayout>
